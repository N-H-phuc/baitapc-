@model List<MyMvcApp.Models.Product>

<h2>Danh sách Hàng hóa</h2>
<p><a class="text-primary" asp-action="Create">Tạo mới</a></p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Sửa</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>
