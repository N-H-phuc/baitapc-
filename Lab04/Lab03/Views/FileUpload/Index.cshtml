@model Lab03.Models.FilesViewModel
@{
    ViewData["Title"] = "Upload file";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Upload File</h2>

<div class="mb-4">
    <form asp-controller="FileUpload" asp-action="UploadFile" method="post" enctype="multipart/form-data">
        <h4>Upload single file</h4>
        <div>
            <input type="file" name="file" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary mt-2">Upload File</button>
    </form>
</div>

<hr />

<div class="mb-4">
    <form asp-controller="FileUpload" asp-action="UploadFiles" method="post" enctype="multipart/form-data">
        <h4>Upload multiple files</h4>
        <div>
            <input type="file" name="files" multiple class="form-control" />
        </div>
        <button type="submit" class="btn btn-success mt-2">Upload Files</button>
    </form>
</div>

<hr />

<h3>Danh sách file đã upload</h3>

@if (Model != null && Model.Files.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Tên file</th>
                <th>Đường dẫn</th>
                <th>Xem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model.Files)
            {
                <tr>
                    <td>@file.Name</td>
                    <td>@file.Path</td>
                    <td>
                        <a href="@file.Path" target="_blank" class="btn btn-sm btn-info">Xem</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Chưa có file nào được upload.</p>
}
